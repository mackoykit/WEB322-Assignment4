<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="/css/main.css" rel="stylesheet" />
  </head>
  <body tabindex="-1">
    <%- include('partials/navbar', { page: '/register' }) %>
    
    <div class="container mx-auto">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-4xl font-bold">Register</h1>
            <p class="py-6">Please provide your information below</p>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto p-4">
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="alert alert-success max-w-md mx-auto">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>User created successfully!</span>
        </div>
        <div class="text-center mt-4">
          <a href="/login" class="btn btn-primary">Proceed to Login</a>
        </div>
      <% } else { %>
        <form action="/register" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-1 gap-6 max-w-md mx-auto">
            <div>
              <div class="mb-6">
                <label for="userName" class="block text-gray-700 font-medium">Username</label>
                <input type="text" id="userName" name="userName" required 
                  class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
              </div>
              <div class="mb-6">
                <label for="email" class="block text-gray-700 font-medium">Email</label>
                <input type="email" id="email" name="email" required 
                  class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
              </div>
              <div class="mb-6">
                <label for="password" class="block text-gray-700 font-medium">Password</label>
                <input type="password" id="password" name="password" required 
                  class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
              </div>
              <div class="mb-6">
                <label for="password2" class="block text-gray-700 font-medium">Confirm Password</label>
                <input type="password" id="password2" name="password2" required 
                  class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
              </div>
            </div>
          </div>

          <div class="mt-6 max-w-md mx-auto">
            <button type="submit" class="btn btn-primary w-full">Register</button>
          </div>
        </form>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="alert alert-error shadow-lg my-4 max-w-md mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= errorMessage %></span>
          </div>
        <% } %>
      <% } %>
    </div>
  </body>
</html>
